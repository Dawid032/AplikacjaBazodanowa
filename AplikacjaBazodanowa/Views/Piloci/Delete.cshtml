@model AplikacjaBazodanowa.Models.Piloci

<h2>Usuń Pilota</h2>

<h3>Czy na pewno chcesz usunąć tego pilota?</h3>
<div>
    <h4>@Model.Imie @Model.Nazwisko</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Linia Lotnicza
        </dt>
        <dd class="col-sm-10">
            @Model.LinieLotnicze.Nazwa
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id_Pilota" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div> 