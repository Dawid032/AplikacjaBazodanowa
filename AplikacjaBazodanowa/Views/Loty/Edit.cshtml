@model AplikacjaBazodanowa.Models.Loty

<h2>Edytuj Lot</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id_Lotu" />
    <div class="form-group">
        <label asp-for="Miasto_Odlotu" class="control-label"></label>
        <input asp-for="Miasto_Odlotu" class="form-control" />
        <span asp-validation-for="Miasto_Odlotu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Miasto_Przylotu" class="control-label"></label>
        <input asp-for="Miasto_Przylotu" class="form-control" />
        <span asp-validation-for="Miasto_Przylotu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Data_Odlotu" class="control-label"></label>
        <input asp-for="Data_Odlotu" class="form-control" type="datetime-local" />
        <span asp-validation-for="Data_Odlotu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Data_Przylotu" class="control-label"></label>
        <input asp-for="Data_Przylotu" class="form-control" type="datetime-local" />
        <span asp-validation-for="Data_Przylotu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Id_Samolotu" class="control-label">Samolot</label>
        <select asp-for="Id_Samolotu" class="form-control" asp-items="ViewBag.Samoloty"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Zapisz" class="btn btn-primary" />
    </div>
</form> 