@model AplikacjaBazodanowa.Models.Loty

<h2>Usuń Lot</h2>

<h3>Czy na pewno chcesz usunąć ten lot?</h3>
<div>
    <h4>@Model.Miasto_Odlotu - @Model.Miasto_Przylotu</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Data Odlotu
        </dt>
        <dd class="col-sm-10">
            @Model.Data_Odlotu.ToString("dd.MM.yyyy HH:mm")
        </dd>
        <dt class="col-sm-2">
            Data Przylotu
        </dt>
        <dd class="col-sm-10">
            @Model.Data_Przylotu.ToString("dd.MM.yyyy HH:mm")
        </dd>
        <dt class="col-sm-2">
            Samolot
        </dt>
        <dd class="col-sm-10">
            @Model.Samolot.Model
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id_Lotu" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div> 