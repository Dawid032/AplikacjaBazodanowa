@model AplikacjaBazodanowa.Models.Rezerwacje

<h2>Edytuj RezerwacjÄ™</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id_Rezerwacji" />
    <div class="form-group">
        <label asp-for="Id_Pasazera" class="control-label">Pasazer</label>
        <select asp-for="Id_Pasazera" class="form-control" asp-items="ViewBag.Pasazerowie"></select>
    </div>
    <div class="form-group">
        <label asp-for="Id_Lotu" class="control-label">Lot</label>
        <select asp-for="Id_Lotu" class="form-control" asp-items="ViewBag.Loty"></select>
    </div>
    <div class="form-group">
        <label asp-for="Data_Rezerwacji" class="control-label"></label>
        <input asp-for="Data_Rezerwacji" class="form-control" type="date" />
        <span asp-validation-for="Data_Rezerwacji" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Zapisz" class="btn btn-primary" />
    </div>
</form> 