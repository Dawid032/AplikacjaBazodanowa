@model dynamic

@{
    ViewData["Title"] = "Edytuj rekord - " + ViewBag.TableName;
}

<h2>Edytuj rekord: @ViewBag.TableName</h2>

<form method="post" action="@Url.Action("EditRow", "Admin", new { tableName = ViewBag.TableName })">
    @foreach (var property in Model.GetType().GetProperties())
    {
        <div class="form-group">
            <label>@property.Name</label>
            <input type="text" name="@property.Name" value="@property.GetValue(Model)" class="form-control" />
        </div>
    }
    <button type="submit" class="btn btn-success">Zapisz</button>
</form>
