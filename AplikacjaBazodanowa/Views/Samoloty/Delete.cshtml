@model AplikacjaBazodanowa.Models.Samoloty

<h2>Usuń Samolot</h2>

<h3>Czy na pewno chcesz usunąć ten samolot?</h3>
<div>
    <h4>@Model.Model</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Liczba Miejsc
        </dt>
        <dd class="col-sm-10">
            @Model.Liczba_Miejsc
        </dd>
        <dt class="col-sm-2">
            Linia Lotnicza
        </dt>
        <dd class="col-sm-10">
            @Model.LinieLotnicze.Nazwa
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id_Samolotu" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div> 